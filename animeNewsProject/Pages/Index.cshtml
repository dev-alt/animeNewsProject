@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container py-5">
    <h2 class="mb-4">Top Stories</h2>
    <p>Total Articles: @(Model.SearchResults?.Count ?? 0)</p>

    <!-- Search form -->
    <form method="get" action="@Request.Path">
        <div class="form-group">
            <input type="text" class="form-control" name="search" placeholder="Search articles">
            <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Search</button>
        </div>
    </form>
    <p></p>

    <!-- Article cards grid -->
    <div class="row">
        <div class="col-md-12 mb-4">
            <h4>Most Popular Articles</h4>
        </div>
        @foreach (var article in Model.SearchResults?.Take(3) ?? new List<AnimeArticle>())
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <a href="/news?id=@article.DocumentId">
                            <h5 class="card-title">@article.Title</h5>
                        </a>
                        <p class="card-text">@TruncateText(article.Text, 100)</p>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-6">
                                <p class="card-text">
                                    <i class="far fa-calendar-alt"></i> Published: @(article.DatePublished != null ? article.DatePublished.Value.ToShortDateString() : "N/A")
                                </p>
                            </div>
                            <div class="col-6">
                                <p class="card-text">
                                    <i class="fas fa-eye"></i> Views: @article.Views
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="col-md-12 mb-4">
            <h4>Newest Articles</h4>
        </div>
        @foreach (var article in Model.SearchResults?.Skip(3).Take(3) ?? new List<AnimeArticle>())
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <a href="/news?id=@article.DocumentId">
                            <h5 class="card-title">@article.Title</h5>
                        </a>
                        <p class="card-text">@TruncateText(article.Text, 100)</p>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-6">
                                <p class="card-text">
                                    <i class="far fa-calendar-alt"></i> Published: @(article.DatePublished != null ? article.DatePublished.Value.ToShortDateString() : "N/A")
                                </p>
                            </div>
                            <div class="col-6">
                                <p class="card-text">
                                    <i class="fas fa-eye"></i> Views: @article.Views
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    <div class="pagination">
        <!-- First page -->
        @if (Model.TotalPages > 1)
        {
            <a href="?page=1" class="@(Model.CurrentPage == 1 ? "active" : "")">First</a>

            <!-- Previous page -->
            @if (Model.CurrentPage > 1)
            {
                <a href="?page=@(Model.CurrentPage - 1)">Previous</a>
            }

            <!-- Page numbers -->
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (Math.Abs(Model.CurrentPage - i) <= 2 || i == 1 || i == Model.TotalPages)
                {
                    <a href="?page=@i" class="@(Model.CurrentPage == i ? "active" : "")" style="margin: 0 5px;">@i</a>
                }
                else if (Math.Abs(Model.CurrentPage - i) == 3)
                {
                    <span class="dots">...</span>
                }
            }

            <!-- Next page -->
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <a href="?page=@(Model.CurrentPage + 1)">Next </a>
            }
            <!-- Last page -->
            <a href="?page=@Model.TotalPages" class="@(Model.CurrentPage == Model.TotalPages ? "active" : "")" style="margin: 0 5px;"> Last</a>
        }
    </div>
</div>
@functions {
    public string TruncateText(string text, int maxLength)
    {
        if (text.Length > maxLength)
        {
            return text.Substring(0, maxLength) + "...";
        }
        return text;
    }
}