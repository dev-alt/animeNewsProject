@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container py-5">
    <h2 class="mb-4">Top Stories</h2>
    <p>Total Articles: @(Model.SearchResults?.Count ?? 0)</p>

    <!-- Search form -->
    <form method="get" action="@Request.Path">
        <div class="form-group">
            <input type="text" class="form-control" name="search" placeholder="Search articles">
            <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Search</button>
        </div>
    </form>
    <p></p>
    <div class="row">
        <!-- Article cards -->
        @foreach (var article in Model.SearchResults ?? new List<AnimeArticle>())
        {
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body bg-light">
                        <h5 class="card-title text-primary">@article.Title</h5>
                        <p class="card-text">@article.Text</p>
                        <p class="card-text">Published: @(article.DatePublished != null ? article.DatePublished.Value.ToShortDateString() : "N/A")</p>
                        <p class="card-text">Rating: @article.Rating</p>
                        <p class="card-text">Author: @article.AuthorId</p>
                        <p class="card-text">Source: @article.SourceId</p>
                        <p class="card-text">Category: @article.Category</p>
                        <p class="card-text">Views: @article.Views</p>
                    </div>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@article.DocumentId">
                        <div class="card-footer">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        }

    </div>

    <!-- Pagination -->
    <div class="pagination">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <a href="?page=@i" class="@(Model.CurrentPage == i ? "active" : "")">@i</a>
        }
    </div>
</div>
