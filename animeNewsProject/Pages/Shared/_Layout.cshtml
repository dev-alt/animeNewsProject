    @using Microsoft.Extensions.FileSystemGlobbing.Internal.PathSegments
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - animeNewsProject</title>
@*        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
        <!-- Include custom CSS files -->
        <link rel="stylesheet" href="css/hidden.css" />
        <link rel="stylesheet" href="css/footer.css"/>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </head>

    <body>
        <a href="#main-content" class="visually-hidden focusable skip-link">
            Skip to main content
        </a>

        <div class="dialog-off-canvas-main-canvas" data-off-canvas-main-canvas>

            <h1 class="page-title visually-hidden">Anime News Database</h1>

            <div class="layout-container front-page">
                <!-- Include the header file -->
                <div class="top-bar expanded">
                    <header id="navbar" role="banner">
                        <div class="max-width-container">
                            <div class="header-logo">
                                <div class="region region-header-logo">
                                    <div id="block-gi5-branding" class="block block-system block-system-branding-block">
                                        <a href="/" rel="home" class="site-logo">
                                            <img src="/images/andb-banner.svg" alt="Home" />
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="header-left-container">
                                <div class="header-social-links">
                                    <div class="header-icon">
                                        <a href="#" target="_blank" class="social-icon twitter">Twitter</a>
                                    </div>
                                    <div class="header-icon">
                                        <a href="#" target="_blank" class="social-icon facebook">Facebook</a>
                                    </div>
                                    <div class="header-icon">
                                        <a href="#" target="_blank" class="social-icon instagram">Instagram</a>
                                    </div>
                                    <div class="header-icon">
                                        <a href="#" target="_blank" class="social-icon twitch">Twitch</a>
                                    </div>
                                    <div class="header-icon">
                                        <a href="#" target="_blank" class="social-icon youtube">YouTube</a>
                                    </div>
                                    <div class="header-icon">
                                        <a href="#" target="_blank" class="social-icon tiktok">TikTok</a>
                                    </div>
                                </div>
                            </div>

                            <div class="header-nav">
                                <div class="region region-header-nav">
                                    <nav role="navigation" aria-labelledby="block-gi5-main-menu-menu"
                                         id="block-gi5-main-menu" class="block block-menu navigation menu--main">
                                        <h2 class="visually-hidden" id="block-gi5-main-menu-menu">Main navigation</h2>
                                        <ul class="menu">

                                            <li class="menu-item">
                                                <a class="nav-link" asp-page="/news">NEWS</a>
                                            </li>

                                            <li class="menu-item">
                                                <a class="nav-link" asp-page="/previews">PREVIEWS</a>
                                            </li>

                                            <li class="menu-item">
                                                <a class="nav-link" asp-page="/reviews">REVIEWS</a>
                                            </li>

                                            <li class="menu-item">
                                                <a class="nav-link" asp-page="/podcasts">PODCASTS</a>
                                            </li>
                                            <li class="menu-item">
                                                <a class="nav-link" asp-page="/features">FEATURES</a>
                                            </li>
                                            <li class="menu-item">
                                                <a class="nav-link" asp-page="/videos">VIDEOS</a>
                                            </li>

                                        </ul>
                                    </nav>
                                </div>
                            </div>

                            <div class="header-right-container">
                                <div class="header-icon search-button">
                                    <div class="icon-search"></div>
                                </div>
                                <div class="header-icon user-button">
                                    <div class="user-menu user-header">
                                        <div class="user-icon icon-missing"></div>
                                    </div>
                                </div>
                                <div class="header-icon expanded-menu-button">
                                    <div class="icon-expanded"></div>
                                </div>
                            </div>
                        </div>
                    </header>
                </div>



                <div class="container">
                    <main role="main" class="pb-3">
                        <!-- Render the page body content -->
                        @RenderBody()
                    </main>
                </div>
                

                <!-- Footer section -->
                
                <footer role="contentinfo">
                    <a href="/">
                        <div class="footer-logo">Anime News Database</div>
                    </a>

                    <div class="socials-footer">
                        <a href="#" target="_blank" class="social-icon twitter">Twitter</a>
                        <a href="#" target="_blank" class="social-icon facebook">Facebook</a>
                        <a href="#" target="_blank" class="social-icon instagram">Instagram</a>
                        <a href="#" target="_blank" class="social-icon twitch">Twitch</a>
                        <a href="#" target="_blank" class="social-icon youtube">YouTube</a>
                        <a href="#" target="_blank" class="social-icon tiktok">TikTok</a>
                    </div>

                    <div class="region region-footer">
                        <nav role="navigation" class="">
                            <ul class="menu">
                                <li class="menu-item">
                                    <a href="#">Help & Customer Service</a>
                                </li>
                                <li class="menu-item">
                                    <a href="#">Contact</a>
                                </li>
                                <li class="menu-item">
                                    <a href="#">Terms and Conditions</a>
                                </li>
                                <li class="menu-item">
                                    <a href="#">Privacy Policy</a>
                                </li>
                                <li class="menu-item">
                                    <a href="#">Code of Conduct</a>
                                </li>
                            </ul>
                        </nav>
                        <p>&copy;  @DateTime.Now.Year.ToString() Anime News Database. All Rights Reserved </p>
                    </div>
                </footer>

                <!-- Include JavaScript libraries -->
                <script src="~/lib/jquery/dist/jquery.min.js"></script>
                <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

                <!-- Include custom JavaScript file -->
                <script src="~/js/site.js" asp-append-version="true"></script>

                <!-- Render optional section for additional scripts -->
                @await RenderSectionAsync("Scripts", required: false)
            </div>
        </div>
    </body>
    </html>
